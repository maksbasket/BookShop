<%= semantic_form_for @comment, :url => product_comments_path(product),
                      :html => { :id => comments_form_id(params[:reply_to]) },
                      :remote => true do |f| %>
  <%= f.inputs do %>
    <%= f.input :text, :label => 'Comment', :input_html => { :rows => 7 }%>
    <%= f.input :parent_id, :as => :hidden, :value => params[:reply_to] %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
