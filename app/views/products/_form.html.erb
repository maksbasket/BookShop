<%= semantic_form_for @product, :html => {:multipart => true } do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :image, :label => image_for(@product), :as => :file %>
    <%= f.input :retained_image, :as => :hidden %>
    <%= f.input :price %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
