<%= semantic_nested_form_for (@product) do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :description %>     
    <%= f.input :price %>
    <%= f.semantic_fields_for :images %>
    <%= f.link_to_add "Add Image", :images, :class => 'with_inputs' %>
  <% end %>
  <%= f.buttons do %>
    <%= f.submit %>
  <% end %>
<% end %>
