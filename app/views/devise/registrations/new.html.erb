<h2>Sign up</h2>

<%= semantic_form_for(resource, :as => resource_name,
                      :url => registration_path(resource_name)) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button "Sign up" %>
  <% end %>
<% end %>

<%= render :partial => "devise/shared/links" %>
