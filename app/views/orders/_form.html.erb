<%= semantic_form_for @order do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :email %>
    <%= f.input :pay_type, :collection => Order::PayType.all,
					  :prompt => 'Select a payment method' %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
